/* pages/help/help.wxss */
.body{
  background: #f3f7f7;
  height: 100%;
  width: 100%;
}
.list_name_box{
  background: #fff;
  border-bottom: 1px solid #efefef;
  display: flex;
  height: 120rpx;
  position: relative;
  align-items: center;
  padding: 0 25rpx;
  font-size: 37rpx;
  padding-top: 20rpx;
  justify-content: space-between;
}
.list_item_name{
  position: relative;
}
.icon_down{
  margin-right: 40rpx;
  width: 35rpx;
  height:35rpx;
  transition:transform  0.3s;
}
.other{
  display: flex;
  height: auto;
  padding: 0 25rpx 0 50rpx;
  align-items: center;
  font-size: 38rpx;
  color: #666;
}
.icon_down_rotate{
  transform:rotate(180deg);
}