.background {
  width: 100%;
  position: relative;
  z-index: 999;
  background: #689bda;
  display: flex;
  flex-flow: row;
}
.background .title{
  font-style: normal;
  color: #fff;
  padding-top: 85rpx;
  font-size: 45rpx;
  font-weight: bold;
}
.background .picture{
  height: 60rpx;
  width: 60rpx;
  padding-top: 85rpx;
  padding-left: 10rpx;
}



.art-header{
  top: 20rpx;
  position: relative;
  width: 100%;
  height: 219px;
  color: #FFF;
}

.art-img{
  width: 100%;
  height: 219px;
}

.art-title{
  position: absolute;
  bottom: 36px;
  left: 8px;
  font-size: 16px;
}

.art-source {
  position: absolute;
  bottom: 8px;
  font-size: 14px;
  right: 8px;   
}

.art-content{
  font-size: 14px;
  color: #616466;
  padding-left: 16rpx;
  padding-right: 16rpx;
  padding-top: 70rpx;
  background-color: #FFF;
  line-height: 1.5;
}