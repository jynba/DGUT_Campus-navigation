.background {
  width: 100%;
  position:fixed;
  z-index: 999;
  background: #689bda;
  display: flex;
  flex-flow: row;
}
.background .title{
  font-style: normal;
  color: #fff;
  padding-top: 85rpx;
  font-size: 45rpx;
  font-weight: bold;
}
.background .picture{
  height: 60rpx;
  width: 60rpx;
  padding-top: 85rpx;
  padding-left: 10rpx;
}
/*
返回顶部按钮
*/
.goTop{
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 80rpx;
  background: rgba(83, 83, 83, 0.3);
  right: 30rpx;
  border-radius: 50%;
  z-index: 999;
}

.art-header{
  top: 20rpx;
  position: relative;
  width: 100%;
  height: auto;
  color: rgb(20, 20, 20);
}

.art-img{
  width: 100%;
  height: 219px;
}

.art-title{
  background-color: rgb(255, 255, 255);
  color: #363738;
  padding:10px 16px;
  font-size: 20px;
  font-family: sans-serif;
  border-bottom: 1px solid #e9e9e9;
}

.art-content{
  font-size: 14px;
  color: #616466;
  padding-left: 16px;
  padding-right: 16px;
  padding-top: 10px;
  background-color: #FFF;
  line-height: 1.5;
}

[alt]{
  max-width:100%;
 }