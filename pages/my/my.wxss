/* pages/my/my.wxss */

.background {
  width: 100%;
  position: relative;
  z-index: 999;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  background: #77aeec;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-direction: row;
}

/*
#6BC5D2 #A5E9DB 769FCD F2A379 #90A4Ae
*/
.top {
  margin-left: 1em;
  display: flex;
  align-items: left;
  justify-content: center;
  flex-direction: column;
}

.item {
  display: flex;
  flex-direction: row;
}



.title_text {
  width: 100%;
  top: 1em;
  color: white;
  line-height: 45px;
  text-align: center;
  position: absolute;
  font-size: 34rpx;
}

.username {
  position: relative;
  top: 40%;
  left: 80rpx;
  font-size: 70rpx;
  color: white;
}

.title_icon {
  position: relative;
  top: 40%;
  right: 40rpx;
  overflow: hidden;
  border-radius: 50%;
  display: flex;
  width: 150rpx;
  height: 150rpx;
  animation: ani 2s linear infinite;
}


@keyframes ani {
  0% {
    box-shadow: 0 0 10px #fff
  }

  25% {
    box-shadow: 0 0 20px #fff
  }

  50% {
    box-shadow: 0 0 30px #fff
  }

  75% {
    box-shadow: 0 0 20px #fff
  }

  100% {
    box-shadow: 0 0 20px #fff
  }
}


