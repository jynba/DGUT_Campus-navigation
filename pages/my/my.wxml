<!--pages/my/my.wxml-->
<view class="page">
  <view class="header">
    <view class='background' style='height:200px'></view>
    <view  class="username"wx:if="{{result == 'ok'}}">{{name}}</view>
    <view class="icon" wx:if="{{result == 'ok'}}">
      <view class="circle_icon"></view>
      <view class="circle_icon" style="animation-delay:2s;"></view>
      <view class="circle_icon" style="animation-delay:4s;"></view>
      <view class='title_icon' bindtap="myCenterPage">
        <image mode="aspectFill" style="width: 100%;height: 100%;border-radius: 50%" src="{{picture}}" ></image>
      </view>
    </view>
    <button wx:else bindtap="showUserInfo">点击授权</button>
  </view>
  <view class="body">
    <view class="day">
      <view class="sentence" bindtap="copyText">
        <text>{{sentence}}</text>
      </view>
      <view class="translation" bindtap="copyText">
        <text>{{translation}}</text>
      </view>
    </view>
    <view class="all_item">
      <view class="item" bindtap="navTo1">
        <text class="text1">管理员模式</text>
      </view>
      <view class="item" bindtap="navTo2">
        <text class="text3">帮助中心</text>
      </view>
      <button class="item"  hover-class="none" open-type="share">
        <text class="text5">转发给好友</text>
      </button>
      <button  class="item" hover-class="none" open-type="contact" bindcontact="handleContact">
        <text class="text6">客服消息</text>
      </button>
    </view>

  </view>
</view>