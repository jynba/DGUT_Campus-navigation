} */
.user_Name{
  margin-left: 10rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #666;
}
.like{
  position: absolute;
  top:0;
  display: flex;
  flex-direction: row;
  right: 0rpx;
}
.like_icon{
  width: 38rpx;
  height: 33rpx;
}
.like_icon image{
  width: 100%;
  height: 100%;
}
.like_nums{
  margin-right: 10rpx;
  margin-left: 10rpx;
  display: inline;
  font-size: 35rpx;
  color: #666;
}