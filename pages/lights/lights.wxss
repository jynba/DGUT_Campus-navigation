.background {
  width: 100%;
  position: relative;
  z-index: 999;
  background: #fff;
  display: flex;
  flex-flow: row;
}

.waterfall {
  padding: 0 35rpx;
}

.header {
  width: 680rpx;
  height: 65rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0 auto 20rpx;
  line-height: 65rpx;
  font-size: 32rpx;
  color: #999;
}
.header text {
  font-size: 32rpx;
  color: #000;
}
.header_after{
  display: inline-block;
  margin-right: 10rpx;
}

.header_afterimg{
  width: 35rpx;
  height: 35rpx;
  margin: 0 0;
  vertical-align: middle;
}

/*展示的选项 */
.cu-tag {
	font-size: 24rpx;
	vertical-align: middle;
	position: relative;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	box-sizing: border-box;
	padding: 0rpx 16rpx;
	height: 48rpx;
	font-family: Helvetica Neue, Helvetica, sans-serif;
	white-space: nowrap;
}

.padding{
	padding-bottom: 30rpx;
}
.bg-white {
	background-color: white;
	color: rgb(102, 100, 100);
}
.round {
	border-radius: 5000rpx;
}
.bg-blue {
	background-color: rgb(125, 155, 253);
	color: white;
}


.campus_lights{
  overflow: hidden;
}
.lights_content{
  width: 680rpx;
  padding: 0 0;
}
.lights_content .pro_l {
  width: 330rpx;
  float: left;
}
.lights_content .pro_r{
  width: 330rpx;
  float: right;
}
.lights_content:after{
  content: "";
  width: 336rpx;
}
.lights_item {
  display: inline-block;
  background:#fff;
  margin-bottom: 60rpx;
  border-radius: 10rpx;
  width: 330rpx;
  position: relative;
}
.lights_item .item-img{
  width:330rpx;
  height: auto;
  border-radius:10rpx;
}
.user1_ava{
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
}

.user_content{
  flex-direction: row;
  display: flex;
  white-space: nowrap;/*合并空白*/
}
.user{
  position: relative;
}
